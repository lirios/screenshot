<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="io.liri.Shell.Screenshooter">
    <method name="captureScreens">
      <arg type="ay" direction="out"/>
      <arg name="overlayCursor" type="b" direction="in"/>
    </method>
    <method name="captureActiveWindow">
      <arg type="ay" direction="out"/>
      <arg name="overlayCursor" type="b" direction="in"/>
      <arg name="windowBorder" type="b" direction="in"/>
    </method>
    <method name="captureWindow">
      <arg type="ay" direction="out"/>
      <arg name="overlayCursor" type="b" direction="in"/>
      <arg name="windowBorder" type="b" direction="in"/>
    </method>
    <method name="captureArea">
      <arg type="ay" direction="out"/>
    </method>
  </interface>
</node>
